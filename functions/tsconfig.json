{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES6",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
